<%= search_form_for @q, url: url do |f| %>
  <div class="shoes-search">
    <div class="shoes-search__inner">
      <div class="shoes-search__group">
          <%= f.label :gender_cont, '男性用 or 女性用シューズ選択', class:'shoes-search__title' %>
          <%= f.select :gender_cont, {'男性用シューズ': 0, '女性用シューズ': 1}, { include_blank: '選択してください'}, { class: 'shoes-search__select' , required: true } %>
      </div>
      <div class="shoes-search__group">
          <%= f.label :purpose_cont,  'ジョギング用 or レース用シューズ選択', class:'shoes-search__title' %>
          <%= f.select :purpose_cont, {'ジョギング用': 0, 'レース用': 1}, { include_blank: '選択してください'}, { class: 'shoes-search__select' , required: true } %>
      </div>
      </div>
      <div class="shoes-search__group">
          <%= f.label :maker_cont,  'メーカー選択', class:'shoes-search__title' %>
          <%= f.select :maker_cont, {'ナイキ': 0, 'アディダス': 1, 'ミズノ': 2, 'アシックス': 3}, { include_blank: '選択してください'}, { class: 'shoes-search__select' , required: true } %>
      </div>
      <div class="shoes-search__group">
          <%= f.label :level_cont,  '走力レベル選択', class:'shoes-search__title' %>
          <%= f.select :level_cont, {'初級者(フルマラソン 5時間以上)': 0, '中級者(フルマラソン 5時間以内)': 1, '上級者(フルマラソン 4時間以内)': 2}, { include_blank: '選択してください'}, { class: 'shoes-search__select' , required: true } %>
      </div>
    </div>
    <%= f.submit (t 'defaults.search'), class: 'shoes-search__btn'%>
  </div>
<% end %>