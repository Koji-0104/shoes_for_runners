<div class="shoes-detail">
  <div id="shoe-id-<%= @shoe.id %>">
    <div class="shoes-detail__inner">
      <h1 class="shoes-detail__title"><%= t '.title' %></h1>
      <!-- 掲示板内容 -->
      <% if logged_in? %>
        <div class="shoes-detail__bookmark-btn">
          <%= render 'bookmark_button', shoe: @shoe %>
        </div>
      <% end %>
      <div class="shoes-detail__img">
        <a href=<%= @shoe.url %> target="_blank" rel="nofollow sponsored noopener" style="word-wrap:break-word;"  ><img src=<%= @shoe.img_url %> border="0" style="margin:2px" alt="" title=""></a>
      </div>
      <div class="shoes-detail__causion">
        ※上記画像をクリックすると<br>楽天商品ページへと移動します
      </div>
      <div class="shoes-detail__text">
        <h2 class="shoes-detail__explanation">シューズ名：<%= @shoe.name %></h2>
        <h2 class="shoes-detail__explanation">性別：<%= @shoe.gender %></h2>
        <h2 class="shoes-detail__explanation">メーカー：<%= @shoe.maker %></h2>
        <h2 class="shoes-detail__explanation">使用目的：<%= @shoe.purpose %></h2>
        <h2 class="shoes-detail__explanation">レベル：<%= @shoe.level %></h2>
      </div>
    </div>
  </div>

  <!-- コメントフォーム -->
  <%= render 'comments/form', { shoe: @shoe, comment: @comment } %>

  <!-- コメントエリア -->
  <%= render 'comments/comments', { comments: @comments } %>
</div>