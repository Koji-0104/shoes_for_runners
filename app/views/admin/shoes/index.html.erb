<% content_for(:title, t('.title')) %>
<div class="container mb-5 pt-2">
  <h1><%= t('.title') %></h1>
  <div class="row">
    <div class="col-md-14 mb-3">
      <%= render 'search_form' %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col"><%= Shoe.human_attribute_name(:id) %></th>
          <th scope="col"><%= Shoe.human_attribute_name(:name) %></th>
          <th scope="col"><%= Shoe.human_attribute_name(:gender_admin) %></th>
          <th scope="col"><%= Shoe.human_attribute_name(:purpose) %></th>
          <th scope="col"><%= Shoe.human_attribute_name(:maker) %></th>
          <th scope="col"><%= Shoe.human_attribute_name(:level) %></th>
          <th scope="col"><%= Shoe.human_attribute_name(:created_at) %></th>
          <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <%= render @shoes %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <!-- ページネーション -->
      <%= paginate @shoes %>
    </div>
  </div>
</div>