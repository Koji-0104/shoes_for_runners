<div class="comment">
  <div class="comment__inner">
    <tr class="comment__table-row" id="comment-<%= comment.id %>">
      <td class="comment__text-contents">
        <h3 class="comment__user-name"><%= comment.user.name %></h3>
        <div class="comment__content" id="js-comment-<%= comment.id %>">
          <%= simple_format(comment.body) %>
        </div>
        <div class="comment__comment-box" id="js-textarea-comment-box-<%= comment.id %>" style="display: none;">
          <textarea class="form-control mb-1" id="js-textarea-comment-<%= comment.id %>"><%= comment.body %></textarea>
          <button class="comment__cancel-btn btn btn-light js-button-edit-comment-cancel" data-comment-id="<%= comment.id %>">キャンセル</button>
          <button class="comment__update-btn btn btn-success js-button-comment-update" data-comment-id="<%= comment.id %>">更新</button>
        </div>
      </td>
      <% if logged_in? && current_user.own?(comment) %>
        <td class="comment__icons">
          <ul class="comment__items">
            <li class="comment__item">
              <a href="#" class='comment__img js-edit-comment-button' data-comment-id="<%= comment.id %>">
                <%= image_tag "pencil.svg", :alt => '鉛筆' %>
              </a>
            </li>
            <li class="comment__item">
              <a href="#" class='comment__img js-delete-comment-button' data-comment-id="<%= comment.id %>">
                <%= image_tag "trash-can.svg", :alt => 'ゴミ箱' %>
              </a>
            </li>
          </ul>
        </td>
      <% end %>
    </tr>
  </div>
</div>